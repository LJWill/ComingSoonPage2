<script>

    $(document).ready(function () {
        var numRight = 0;
        var idx = 0;
        var numRight = 0;
        $('#next1').click((e) => {
            var l1 = $('.l1');
            var l1_selected = findSelect(l1);
            if (l1_selected) {
                $('#quiz1').fadeOut("slow");
                $('#quiz2').fadeIn("slow");
            } else {
                alert("make selection");
            }

            if (l1_selected.id == "q1-a") {
                numRight++;
            }
            console.log(l1_selected.id);

        });

        $('#next2').click(() => {
            var l2 = $('.l2');
            var l2_selected = findSelect(l2);
            if (l2_selected) {
                $('#quiz2').fadeOut("slow");
                $('#quiz3').fadeIn("slow");
            } else {
                alert("make selection");
            }
            if (l2_selected.id == "q2-b") {
                numRight++;
            }
            console.log(l2_selected.id);
        });

        $('#submit').click(() => {
            var l3 = $('.l3');
            var l3_selected = findSelect(l3);

            if (l3_selected) {
                $('#quiz3').fadeOut("slow");
                $('.bg').fadeIn("slow");
            } else {
                alert("make selection");
            }
            if (l3_selected.id == "q3-c") {
                numRight++;
            }
            document.getElementById('grade').innerHTML = "YOU'VE GOT " + numRight + " OUT OF 3!";

            console.log(l3_selected.id);
            console.log(numRight);
        });

        function findSelect(list) {
            for (var i = 0; i < list.length; i++) {
                if (list[i].classList.contains('active')) {
                    return list[i];
                }
            }
        }

    });
</script>


