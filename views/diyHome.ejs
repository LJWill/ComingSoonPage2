    <title>DIY shoes</title>

    <script>

        $(function() {
            $('#out').change(function(){
                $('.out').hide();
                $('#' + $(this).val()).show();
                document.getElementById("select out").innerText = document.getElementById("out").options[document.getElementById("out").selectedIndex].text;
            });
        });
        $(function() {
            $('#mid').change(function(){
                $('.mid').hide();
                $('#' + $(this).val()).show();
                document.getElementById("select mid").innerText = document.getElementById("mid").options[document.getElementById("mid").selectedIndex].text;
            });
        });
        $(function() {
            $('#up').change(function(){
                $('.up').hide();
                $('#' + $(this).val()).show();
                document.getElementById("select up").innerText = document.getElementById("up").options[document.getElementById("up").selectedIndex].text;
            });
        });

        var $up = 1;
        var $mid = 1;

        function combinator(){
            $up = $('#up').val();
            $mid = $('#mid').val();
            $up = $up[1];
            $mid = $mid[1];
            document.getElementById("finalRender").src = "images/combinations/U" + $up + "M" + $mid + ".png";
        };

    </script>

</head>
<body>

    <div>
    <a href="index"><img class="homepage_logo" src="images/logo.png",alt="group logo"></a>
    <h1>Renike</h1>
    <button class="signup"><a href="signup">Sign up</a></button>
    <button class="login"><a href="login">Login</a></button>
        <ul>
            <li><a href=#>DIY</a></li>
            <li><a href=#>Shoes Evaluation</a></li>
            <li><a href=#>Quiz Show</a></li>
            <li><a href="index">Home</a></li>
        </ul>
    </div>





    <div class="container">
        <div class="row">
            <div class="col-sm">

                <!--out-->

                <label class="wrapper" for="states">Please choose out sole:</label>
                <div class="button dropdown">
                    <select id="out" onclick="combinator()">
                        <option value="o1">out1</option>
                        <option value="o2">out2</option>
                        <option value="o3">out3</option>
                        <option value="o4">out4</option>
                        <option value="o5">out5</option>
                    </select>
                </div>

                <figure class="snip1584">
                    <div class="output">
                        <div id="o1" class="out o1" style="display: block"><img src="images/outsoles/outsole1.jpg" alt="bottom"></div>
                        <div id="o2" class="out o2" style="display: none"><img src="images/outsoles/outsole2.jpg" alt="bottom"></div>
                        <div id="o3" class="out o3" style="display: none"><img src="images/outsoles/outsole3.jpg" alt="bottom"></div>
                        <div id="o4" class="out o4" style="display: none"><img src="images/outsoles/outsole4.jpg" alt="bottom"></div>
                        <div id="o5" class="out o5" style="display: none"><img src="images/outsoles/outsole5.jpg" alt="bottom"></div>
                    </div>
                    <figcaption>
                        <h3>AJ Air</h3>
                        <h5>this shoes is made by hand.</h5>
                    </figcaption>
                </figure>


            </div>
            <div class="col-sm">

                <!--mid-->

                <label class="wrapper" for="states">Please choose mid sole:</label>
                <div class="button dropdown">
                    <select id="mid" onclick="combinator()">
                        <option value="m1">m1</option>
                        <option value="m2">m2</option>
                        <option value="m3">m3</option>
                    </select>
                </div>
                <figure class="snip1584">
                    <div class="output">
                        <div id="m1" class="mid m1" style="display: block"><img src="images/midsoles/midsole1.png" alt="bottom"></div>
                        <div id="m2" class="mid m2" style="display: none"><img src="images/midsoles/midsole2.png" alt="bottom"></div>
                        <div id="m3" class="mid m3" style="display: none"><img src="images/midsoles/midsole3.png" alt="bottom"></div>
                    </div>
                    <figcaption>
                        <h3>AJ Air</h3>
                        <h5>this shoes is made by hand.</h5>
                    </figcaption>
                </figure>

            </div>
            <div class="col-sm">

                <!--up-->
                <label class="wrapper" for="states">Please choose upper material:</label>
                <div class="button dropdown">
                    <select id="up" onclick="combinator()">
                        <option value="u1">u1</option>
                        <option value="u2">u2</option>
                        <option value="u3">u3</option>
                        <option value="u4">u4</option>
                        <option value="u5">u5</option>
                    </select>
                </div>
              <figure class="snip1584">
                    <div class="output">
                        <div id="u1" class="up u1" style="display: block"><img src="images/uppermaterials/uppermaterial1.png" alt="bottom"></div>
                        <div id="u2" class="up u2" style="display: none"><img src="images/uppermaterials/uppermaterial2.png" alt="bottom"></div>
                        <div id="u3" class="up u3" style="display: none"><img src="images/uppermaterials/uppermaterial3.png" alt="bottom"></div>
                        <div id="u4" class="up u4" style="display: none"><img src="images/uppermaterials/uppermaterial4.png" alt="bottom"></div>
                        <div id="u5" class="up u5" style="display: none"><img src="images/uppermaterials/uppermaterial5.png" alt="bottom"></div>
                    </div>
                    <figcaption>
                        <h3>AJ Air</h3>
                        <h5>this shoes is made by hand.</h5>
                    </figcaption>
                </figure>

            </div>
        </div>
    </div>




    <div class="container">
        <div class="row">
            <div class="col-sm-8">

                <!--final render-->

                <p style="font-size: 200%">Your design: </p>
                <img id="finalRender" src="images/combinations/U1M1.png" style="max-height: 400px; margin-left: 100px" alt="bottom">


            </div>
            <div class="col-sm-4">

                <!--price, order-->

                <h3>Your Order</h3>
                <div class="price-summary">
                    <table>
                        <tr class="border">
                            <th class="two-thirds left">Summary</th>
                            <th class="one-third right">Price</th>
                        </tr>
                        <tr>
                            <td class="two-thirds left" id="select out">Out</td>
                            <td class="one-third right">$75</td>
                        </tr>
                        <tr>
                            <td class="two-thirds left" id="select mid">Mid</td>
                            <td class="one-third right">$100</td>
                        </tr>
                        <tr>
                            <td class="two-thirds left" id="select up">Up</td>
                            <td class="one-third right">$100</td>
                        </tr>
                        <tr class="border total">
                            <td class="two-thirds left">Total</td>
                            <td class="one-third right">$175</td>
                        </tr>
                    </table>
                </div>
                <!--<button><a class="order" href="#popup1">ORDER</a></button>-->
                <a class="btn btn-primary" href="#popup1" role="button">Find the nearest store</a>



                <!--price, order end-->
            </div>
        </div>
    </div>






